{
  "manifest_version": 3,
  "name": "Booth Library Scraper",
  "version": "1.0",
  "description": "Boothの購入商品・ギフト情報を取得してJSONで保存",
  "permissions": [
    "scripting",
    "activeTab",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["https://booth.pm/*", "https://*.booth.pm/*"]
}
